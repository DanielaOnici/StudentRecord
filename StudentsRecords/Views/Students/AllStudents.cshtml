@model List<StudentViewModel>

@{
    ViewData["Title"] = "All Students";
}

<a asp-controller="Students" asp-action="Create" class="btn btn-primary">Add new student</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>GPA</th>
            <th>GPA Scale</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (StudentViewModel student in Model)
        {
            <tr>
                <td>@student.ActiveStudent.FirstName</td>
                <td>@student.ActiveStudent.LastName</td>
                <td>@student.Age</td>
                <td>@student.ActiveStudent.GPA</td>
                <td>@student.Scale</td>
                <td>
                    <a src="#">Edit</a>
                    <!-- add 1 pixel margin on the left and right (i.e. x dirn) of the | -->
                    <span class="mx-1">|</span>
                    <a src="#">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>